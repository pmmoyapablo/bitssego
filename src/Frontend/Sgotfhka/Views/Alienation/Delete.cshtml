@model Sisgtfhka.Models.AlienationModel

@{ 
    ViewData["Title"] = "Borrar Enajenación";
    string key = Model.Verificador;
}

<h2>Borrar Enajenación</h2>

<h3>¿Estás seguro de que quieres eliminar esta Enajenación?</h3>

<div>
    <h4>Datos de la Enajenación a borrar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Serial)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Serial)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Observations)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Observations)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.AlienationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AlienationDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <div class="form-group">
            <label asp-for="Verificador" class="control-label"></label>
            <input asp-for="Verificador" class="form-control" style="width:200px;" value="@key" />
            <span asp-validation-for="Verificador" class="text-danger"></span>
            <input asp-for="Serial" type ="hidden" value="@Model.Serial" />
            <span class="text-danger">@ViewBag.Message</span>
        </div>
        <input type="submit" value="Borrar" class="btn btn-danger" />
        <a asp-action="Index">Regresar</a>

    </form>


</div>
