@model Sisgtfhka.Models.EmployeeModel

@{
    ViewData["Title"] = "Editar Empleado";
    int RolId = int.Parse(ViewData["RolId"].ToString());
}

<h2>Editar Empleado</h2>

<h4>Datos del Empleado a editar.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="rif" class="control-label"></label>
                <input asp-for="rif" class="form-control" />
                <span asp-validation-for="rif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="supervitorId" class="control-label"></label>
                @if (RolId != 1)
                {@Html.DropDownListFor(model => model.supervitorId, (IEnumerable<SelectListItem>)ViewBag.Opciones3, "", htmlAttributes: new { @class = "form-control", disabled = "disabled" }) }
               else
                { @Html.DropDownListFor(model => model.supervitorId, (IEnumerable<SelectListItem>)ViewBag.Opciones3, "", htmlAttributes: new { @class = "form-control" })}
                <span asp-validation-for="supervitorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="code" class="control-label"></label>
                @if (RolId != 1)
                {<input asp-for="code" class="form-control" disabled ="disabled" /> }
                else
                { <input asp-for="code" class="form-control" />}
                <span asp-validation-for="code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="departamentId" class="control-label"></label>
                @if (RolId != 1)
                { @Html.DropDownListFor(model => model.departamentId, (IEnumerable<SelectListItem>)ViewBag.Opciones, "", htmlAttributes: new { @class = "form-control", disabled = "disabled" }) }
                else
                { @Html.DropDownListFor(model => model.departamentId, (IEnumerable<SelectListItem>)ViewBag.Opciones, "", htmlAttributes: new { @class = "form-control" }) }
                <span asp-validation-for="departamentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="chargueId" class="control-label"></label>
                @if (RolId != 1)
                { @Html.DropDownListFor(model => model.chargueId, (IEnumerable<SelectListItem>)ViewBag.Opciones2, "", htmlAttributes: new { @class = "form-control", disabled = "disabled" }) }
                else
                { @Html.DropDownListFor(model => model.chargueId, (IEnumerable<SelectListItem>)ViewBag.Opciones2, "", htmlAttributes: new { @class = "form-control" }) }
                <span asp-validation-for="chargueId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="email" class="control-label"></label>
                @if (RolId != 1)
                {<input asp-for="email" class="form-control" disabled="disabled" /> }
                else
                { <input asp-for="email" class="form-control" />}
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="phone" class="control-label"></label>
                <input asp-for="phone" class="form-control" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        @if (RolId != 1)
                        {<input asp-for="Enable" disabled ="disabled" /> @Html.DisplayNameFor(model => model.Enable) }
                        else
                        { <input asp-for="Enable" /> @Html.DisplayNameFor(model => model.Enable)}
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

