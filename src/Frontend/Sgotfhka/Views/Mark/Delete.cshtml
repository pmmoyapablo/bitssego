@model Sisgtfhka.Models.MarkModel

@{
    ViewData["Title"] = "Borrar Marca";
}

<h2>Borrar Marca</h2>

<h3>Estás seguro que quieres eliminar esta Marca?</h3>
<div>
    <h4>Datos de la Marca a borrar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
    </dl>

    <form asp-action="Delete">
