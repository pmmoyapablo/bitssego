@model Sisgtfhka.Models.ReplacementModel

@{
    ViewData["Title"] = "Agregar Nuevo Repuesto";
    int productId = (int)ViewBag.ProductId;
}

<h2>Relacionar Repuesto a Producto</h2>
<h3>@ViewBag.DescriptionProduct</h3>
<h4>Use el siguiente formulario para relacionar un Repuesto al Producto</h4>
<hr />
<div class="alert alert-warning animated bounceInDown" role="alert">
    <button class="close" data-dismiss="alert"><span>&times;</span></button>
    <strong>Importante:</strong> <i>Solo se pueden cargar Modelos equivalentes y Compatibles</i>
</div>

    <div class="row">

        <div class="col-md-4">
            <form asp-action="AddReplacements">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="name" class="control-label"></label>
                    @Html.DropDownListFor(model => Model.id, (IEnumerable<SelectListItem>)ViewBag.Opciones, "Seleccione un Repuesto de la lista", htmlAttributes: new { @class = "form-control" })
                    <span asp-validation-for="id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="hidden" name="productId" id="productId" value="@productId" />
                    <input type="submit" value="Agregar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Regresar</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
