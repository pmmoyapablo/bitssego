@model Sisgtfhka.Models.ReplacementModel

@{
    ViewData["Title"] = "Borrar Repuesto";
}

<h2>Borrar Repuesto</h2>

<h3>¿Estás seguro que quieres eliminar este Repuesto?</h3>
<div>
    <h4>Datos del Repuesto a borrar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.markId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Model.Mark.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.modelId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.code)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.code)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.parts)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.parts)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.state)
        </dt>
        <dd>
            @{
                var activo = "Activo";
                var inactivo = "Inactivo";
                if (Model.state == 1)
                {
                    @activo
                }
                if (Model.state == 0)
                {
            <span class="text-danger">@inactivo</span>
                }
            }
            @*@Html.DisplayFor(model => model.state)*@
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.imageUrl)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.imageUrl)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.creation_date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.creation_date)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
