@model Sisgtfhka.Models.ReplacementModel

@{
    ViewData["Title"] = "Detalles del Repuesto";

    string pathImagen = "/images/repuestos/" + Model.imageUrl;
}

<h2>Detalles del Repuesto</h2>

<div class="row">
    <h4>Detalles del Repuesto</h4>
    <hr />
    <div class="col-md-4">
        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.markId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Model.Mark.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.modelId)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Model.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.name)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.name)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.description)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.description)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.code)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.code)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.parts)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.parts)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.state)
            </dt>
            <dd>
                @{
                    var enable = "Activo";
                    var disable = "Inactivo";
                    if (Model.state == 1)
                    {
                        @enable
                    }
                    if (Model.state == 0)
                    {
                        <span class="text-danger">@disable</span>
                    }
                }
                @*@Html.DisplayFor(model => model.state)*@
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.creation_date)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.creation_date)
            </dd>
        </dl>
    </div>
    <div class="col-md-4">
        <p><b>@Html.DisplayNameFor(model => model.imageUrl)</b></p>
        <img src="@pathImagen" alt="Sin Foto" />
    </div>
</div>
<div>
    <h3>Prefijo</h3>
</div>
<hr />
<div>
    @if (Model.Prefix != null)
    {
        <dt>
            <dd>
                <h4><b>@Html.DisplayNameFor(model => model.Prefix.InitCorrelative):</b>  @Html.DisplayFor(model => model.Prefix.InitCorrelative) | <b>@Html.DisplayNameFor(model => model.Prefix.InitAlphaNum):</b> @Html.DisplayFor(model => model.Prefix.InitAlphaNum)</h4>
            </dd>
        </dt>
    }
    @Html.ActionLink("Configurar", "Edit", new { id = Model.id })
</div>
<hr />
<hr />
<div>
    @Html.ActionLink("Editar", "Edit", new { id = Model.id }) |
    <a asp-action="Index">Regresar</a>
</div>
