@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
    string errorMsn = Convert.ToString(ViewBag.Message);
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Se produjo un error al procesar su solicitud.</h2>

<!--ViewBag.Message;-->

@if (errorMsn == "InternalServerError" || errorMsn == "500")
{
    <h2 class="text-danger">Detalles: Error Interno en el Servidor.</h2>
}
else if (errorMsn == "404")
{
    <h2 class="text-danger">No se encontró la vista.</h2>
    <h1 class="text-danger"> @ViewBag.Message</h1>
}
else
{
    <h2 class="text-danger">Detalle:  @ViewBag.Message</h2>
}


