@model Sisgtfhka.Models.TechnicalOperationModel

@{
    ViewData["Title"] = "Borrar Operación Técnica";
    string key = Model.Verificador;
}

<h2>Borrar Operación Técnica</h2>

<h3>¿Estás seguro que quieres eliminar esta Operación Técnica?</h3>

<div>
    <h4>Datos de la Operación Técnica a borrar</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Serial)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Serial)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TypeOperationTechId)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TypeOperationTech.Description)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Observation)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Observation)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Operation_Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Operation_Date)
        </dd>
    </dl>
    <form asp-action="Delete">
        <div class="form-group">
            <label asp-for="Verificador" class="control-label"></label>
            <input asp-for="Verificador" class="form-control" style="width:200px;" value="@key" />
            <span asp-validation-for="Verificador" class="text-danger"></span>
            <input asp-for="Serial" type="hidden" value="@Model.Serial" />
            <span class="text-danger">@ViewBag.Message</span>
        </div>
        <input type="submit" value="Borrar" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}