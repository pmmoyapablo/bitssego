@model Sisgtfhka.Extensions.PaginatedList<Sisgtfhka.Models.WorkshopModel>
@{
    ViewData["Title"] = "Asignación de Órdenes";
    int RolId = int.Parse(ViewData["RolId"].ToString());
    List<SelectListItem> items = (List<SelectListItem>)ViewBag.Opciones3;
    List<SelectListItem> items2 = (List<SelectListItem>)ViewBag.Opciones2;
}


<h2>Asignación de Órdenes</h2>

<form asp-action="AssignOrders" method="get" class="form-inline">
    <div class="form-group">
        <p>
            Dato: <input type="text" class="form-control" placeholder="buscar.." name="SearchString" value="@ViewData["CurrentFilter"]" />
            <button type="submit" class="btn btn-info" data-toggle="popoverTp" data-trigger="focus" data-content="Buscar"><i class="fas fa-search"></i></button> |
            <a asp-action="AssignOrders">Refrescar</a>
        </p>
    </div>
</form>

<div class="form-inline">
    <p>
        Empleados:@Html.DropDownList("selectEmployee", items, "Seleccione un Empleado", new { @class = "form-control", id = "selectEmployee" })
        <button class="btn btn-success" id="btnMultiAssign">Asignar</button>
    </p>
</div>
<div class="form-inline alert alert-warning hidden col-md-4 animated" role="alert" id="div-alerts">
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <div id="msg-alerts"></div>
</div>

<table class="table table-hover table-responsive">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().NumerOrder)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().Distributor)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().Serial)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().EmployeeId)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().Model)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().ReceptionDate)</a>
            </th>
            <th>
                <input type="hidden" value="" id="helper" />
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().WarrantyId)</a>
            </th>
            <th>
                <a asp-action="AssignOrders" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">@Html.DisplayNameFor(WorkshopModel => WorkshopModel.FirstOrDefault().StateOrderId)</a>
            </th>
            <th>
                PDF
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <input class="form-check-input" type="checkbox" value="@item.Id" id="chbox">
                </td>
                <td>
                    <a asp-action="Binnacle" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.NumerOrder)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Distributor.description)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Serial)</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.employee.description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @*@Html.ValueFor(modelItem => item.ReceptionDate, "{0:dd/MM/yyyy}")*@
                    @Html.ValueFor(modelItem => item.ReceptionDate)
                </td>
                <td>    
                    <button type="button" class="btn-link xclic" id="" data-toggle="modal" data-target="#modalWarrantyEdition" value="@item.Id" style="text-align:left">@Html.DisplayFor(modelItem => item.warranty.Description)</button>                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.statesOrder.Description)
                </td>
                <td>
                    @*@Html.ActionLink("PDF", "GetPdf", new { id = item.Id }) |*@
                    <a asp-action="GetPdf" asp-route-id="@item.Id" class="btn btn-danger btn-sm" data-toggle="popoverTp" data-trigger="focus" data-content="Descargar PDF"><i class="far fa-file-pdf"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>


@{
    var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage ? "disabled" : "";
}
<a asp-action="AssignOrders"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex - 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-default @prevDisabled">
    Anterior
</a>
<a asp-action="AssignOrders"
   asp-route-sortOrder="@ViewData["CurrentSort"]"
   asp-route-pageNumber="@(Model.PageIndex + 1)"
   asp-route-currentFilter="@ViewData["CurrentFilter"]"
   class="btn btn-primary @nextDisabled">
    Siguiente
</a>

<!--Modal Section:-->
<!--Modal Confirmacion Asignacion Multiple-->
<div class="modal fade" id="modalMultiAssign">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true" >&times;</button>*@
                <h3 class="modal-title">Asignación de Órdenes:</h3>
            </div>
            <div class="modal-body">
                <h4>Empleado: <span id="name"></span></h4>
                <div id="fields"></div>
            </div>

            <div class="modal-footer">
                <!--Barra de progreso-->
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 2%" id="pbar">
                        <div id="status"></div>
                        <span class="sr-only">0% Complete</span>
                    </div>
                </div>
                <p class="col-md-6 text-left">&copy; 2019 - THE FACTORY HKA C.A</p>
                <button class="btn btn-success" id="btnConfirm">
                    Confirmar
                    <span class="badge" id="badge"></span>
                </button>
                <a class="btn btn-danger" data-dismiss="modal" id="modalclose">Cerrar</a>
                <a asp-action="AssignOrders" class="btn btn-primary hidden" id="modalcontinue"><img class="hidden" id="loader" src="~/images/loader-small.gif" /> Continuar</a>
            </div>
        </div>
    </div>
</div>
<!-- Fin Modal Confirmacion Asignacion Multiple-->
<!--Modal Edicion de Garantía-->
<div class="modal fade" id="modalWarrantyEdition">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                @*<button type="button" class="close" data-dismiss="modal" aria-hidden="true" >&times;</button>*@
                <h3 class="modal-title">Editar Garantía Órden: <span id="numOrder"></span></h3>
            </div>
          <form asp-action="WarrantyEdition" method="post" enctype="multipart/form-data" id="form">
            <div class="modal-body">


                    <div>
                        <input name="id" id="id" type="hidden" value="" />
                        <label for="WarrantyId">Garantía: <span id="numOrder"></span></label>
                        @Html.DropDownList("WarrantyId", items2, "Seleccione", new { @class = "form-control", id = "WarrantyId" })
                        
                    </div>               

                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="observation">Observación:</label>
                            <textarea class="form-control" value="" cols="4" rows="5" maxlength="500" name="observation" id="observation" placeholder="Por favor ingrese una observación"></textarea>
                        </div>
                    </div>
                       


                <!--Alertas-->
                <div class="alert alert-warning hidden animated" role="alert" id="div-alerts2">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <div id="msg-alerts2"></div>

                </div>
            </div>


            <div class="modal-footer">
                <!--Barra de progreso
                <div class="progress">
                    <div class="progress-bar progress-bar-striped progress-bar-striped active" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 2%" id="pbar">
                        <div id="status"></div>
                        <span class="sr-only">0% Complete</span>
                    </div>
                </div>-->
                <p class="col-md-6 text-left">&copy; 2019 - THE FACTORY HKA C.A</p>
                <button type="submit" class="btn btn-success" id="btnWarranty">
                    <img class="hidden" id="loader2" src="~/images/loader-small.gif" /> Confirmar
                    <span class="badge" id="badge"></span>
                </button>
                <a class="btn btn-danger" data-dismiss="modal" id="modalclose">Cerrar</a>
                <a asp-action="ReviewOrders" class="btn btn-primary hidden" id="modalcontinue">Continuar</a>
            </div>
           </form>
        </div>
    </div>
</div>
<!-- Fin Modal Edicion de Garantía-->

@section Scripts
    {
    <script>

        $(document).ready(function () {
            //funcionalidad modal edicion de garantía ->

            //capturar el id del link presionado
            var linkVal
            $('.xclic').click(function (e) {
                $("#helper").val($(this).val())
                linkVal = $('#helper').val()
                $("#numOrder").html(linkVal)
                $("#id").val(linkVal)

                //console.log(linkVal)
            })
            // Boton confirmar cambio de garantía
            
            $("#btnWarranty").click(function (e) {
                if ($("#WarrantyId").val() == "" || $("#observation").val() == "") {
                    e.preventDefault()
                    $("#div-alerts2").removeClass("hidden").addClass("flash")
                    $("#msg-alerts2").html("Los campos <strong>Garantía y Observación</strong> son campos obligatorios, por favor verifique e intente nuevamente.")
                }else {
                    
                    $("#loader2").removeClass("hidden")
                    //$("#btnWarranty").prop("disabled","disabled")
                }
            })

            //funcionalidad asigancion multiple de ordenes ->
            $("#btnMultiAssign").click(function (e) {
                if ($("#selectEmployee").val() == 0) {
                    //console.log("sin empleado")

                    //Alerta sin seleccion de empleado Empleado
                    $("#div-alerts").removeClass("hidden").addClass("animated").addClass("flash")
                    $("#msg-alerts").html("Debe <strong>Seleccionar</strong> un Empleado")

                } else {
                    // capturar los checkbox seleccionados
                    var ids;
                    ids = $("input[type=checkbox]:checked").map(function () {
                        return $(this).attr("value");
                    }).get();
                    $("#badge").html(ids.length)

                    console.log("IDS: " + ids.join(", "));
                    console.log(ids.length);

                    //validar que este seleccionada al menos una orden
                    if (ids.length > 0) {

                        //coloco el nombre del empleado,los numeros de orden y muestro el modal
                        $('#modalMultiAssign').modal('show')
                        $("#name").html($("#selectEmployee option:selected").text())
                        $("#orders").html(ids.join(", "))

                        // crear los campos de observacion
                        for (let i = 0; i < ids.length; i++) {
                            $("#fields").append('Número de Orden:<b>' + ids[i] + '<br>Observación:</b><br><textarea class="form-control" value="" cols="4" rows="2" maxlength="500" id="texto'+i+'"></textarea><br>')
                        }

                        $("#btnConfirm").click(function () {

                            //creo el JSON ---> AJAX
                            var empId = $("#selectEmployee option:selected").val()
                            var url = "@Url.Action("ConfmAsigOrder", "Workshop")"
                            var observation;
                            var state = 3;
                            var data;

                            //multi-envio
                            for (let i = 0; i < ids.length; i++) {
                                observation = $('#texto'+i+'').val();
                                data = { id: ids[i], stateOrder: state, employeeId: empId,observations:observation }
                                //console.log(observation)
                                $.post(url, data).done(function (response) {
                                    //asignacion exitosa
                                    if (response) {
                                        $("#status").html("Asignación Exitosa")
                                    }
                                    //Error en la asignacion
                                    if (!response) {
                                        $("#status").html("Error en la asignación, verifique e intente nuevamente")
                                        $('#pbar').addClass("progress-bar-danger");
                                    }

                                }).fail(AjaxError)

                            }
                            //Animacion barra de progreso
                            var progreso = 0;
                            var idIterval = setInterval(function () {
                                // Aumento el progeso segun la cantidad de ordenes
                                progreso += 100/ids.length;
                                $('#pbar').css('width', progreso + '%');

                                //Si llegó a 100 elimino el interval
                                if (progreso == 100) {
                                    clearInterval(idIterval);
                                }
                            }, 700);
                            //Proceso exitoso muestro el boton continuar
                            $("#btnConfirm").addClass("hidden")
                            $("#modalclose").addClass("hidden")
                            $("#modalcontinue").removeClass("hidden")
                            $("#status").addClass("animated infinite flash slow")
                            

                        });

                    } else {
                        //Alerta sin seleccion de alguna orden
                        $("#div-alerts").removeClass("hidden").addClass("animated").addClass("flash")
                        $("#msg-alerts").html("Debe <strong>Seleccionar</strong> una(s) Órden")
                    }


                }
            });
            //funcion de errores con Ajax
            function AjaxError(err) {

                console.log(err.responseText)
            }

            //boton continuar
            $("#modalcontinue").click(function () {
                $("#loader").removeClass("hidden")
            })


            //boton cerrar modal #modalMultiAssign
            $("#modalclose").click(function () {
                $('#pbar').css('width', '2%');
                $("#fields").html("")
            })
            $(".close").click(function () {
                $("#fields").html("")
            })


        });

    </script>
}